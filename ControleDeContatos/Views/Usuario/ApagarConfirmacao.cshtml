@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação de apagar o usuário";
}

<div class="text-center">
    <h3>Realmente deseja apagar o usuário (@Model.Nome)?</h3>
</div>

<div class="text-center">   
    <a class="btn btn-primary w-50" asp-controller="Usuario" asp-action="Index" role="button">Cancelar exclusão</a>
    <a class="btn btn-danger w-50" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>
</div>



